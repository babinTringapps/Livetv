<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <FrameLayout
        android:id="@+id/videoFragment1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_focus"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/videoFragment3"
        app:layout_constraintEnd_toStartOf="@id/videoFragment2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.media3.ui.PlayerView
            android:id="@+id/videoPlayer1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:surface_type="texture_view" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/videoFragment2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_focus"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/videoFragment4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/videoFragment1"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.media3.ui.PlayerView
            android:id="@+id/videoPlayer2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:surface_type="texture_view" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/videoFragment3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_focus"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/videoFragment4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/videoFragment1">

        <androidx.media3.ui.PlayerView
            android:id="@+id/videoPlayer3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:surface_type="texture_view" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/videoFragment4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_focus"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/videoFragment3"
        app:layout_constraintTop_toBottomOf="@id/videoFragment2">

        <androidx.media3.ui.PlayerView
            android:id="@+id/videoPlayer4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:surface_type="texture_view" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>